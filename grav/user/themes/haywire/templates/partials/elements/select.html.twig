<div class="select {{ inputClass }}">
    <select {% if vue %}v-model="selectedOption" @change="handleSelectChange"{% endif %}>
        {% for option in options %}
            <option value="{{ option.value }}"
                    {% if option.selected %} selected{% endif %}
                    {% if option.disabled %} disabled{% endif %}>{{ option.text }}</option>
        {% endfor %}
        {% if vue %}
            <option v-for="option in options" :value="option.value" :disabled="option.disabled">${ option.text }</option>
        {% endif %}
    </select>
</div>
