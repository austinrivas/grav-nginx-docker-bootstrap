{% set featuredProjectTemplate = 'partials/featured-project.html.twig' %}
{% set paginationTemplate = 'components/pagination.html.twig' %}

<section class="featured-projects property-list-container">
    <div class="container">
        <h2 class="has-text-centered">${properties.length} Results</h2>
        <div class="columns is-variable is-9" v-for="row in rows">
            <div class="column card" v-for="model in row">
                <featured-project v-if="model" :model="model" inline-template>
                    {% include featuredProjectTemplate only %}
                </featured-project>
            </div>
        </div>
        {% include paginationTemplate only %}
    </div>
</section>

