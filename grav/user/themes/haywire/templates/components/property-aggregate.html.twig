{% set filterTemplate =  'components/property-filter.html.twig' %}
{% set arcMapTemplate = 'components/arcmap.html.twig' %}
{% set propertyListTemplate = 'components/property-list.html.twig' %}
{% set propertyListTableTemplate = 'components/property-list-table.html.twig' %}
<property-aggregate inline-template>
    <div class="property-aggregate-container">
        <property-filter
            :event-bus="eventBus"
            :execute-query-event="executeQueryEvent"
            :grid-view="gridView"
            :list-view-change-event="listViewChangeEvent"
            :list-view="listView"
            :table-view="tableView"
            inline-template>
            {% include filterTemplate with {} only %}
        </property-filter>
        <arcmap :collection="collection" inline-template>
            {% include arcMapTemplate with {} only %}
        </arcmap>
        <property-list-grid v-if="showGrid"
                       :collection="collection"
                       :items-in-row="gridItemsInRow"
                       inline-template>
            {% include propertyListTemplate with {} only %}
        </property-list-grid>
        <property-list-table v-if="showTable"
                             :collection="collection"
                             inline-template>
            {% include propertyListTableTemplate with {} only %}
        </property-list-table>
    </div>
</property-aggregate>
