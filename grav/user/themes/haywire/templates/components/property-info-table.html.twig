<section class="property-info-table">
    <div class="container">
        <table class="table is-fullwidth is-bordered">
        <thead>
            <tr>
                <th v-for="header in headers">${header}</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="row in rows">
                <td v-for="value in row">${value}</td>
            </tr>
        </tbody>
        </table>
    </div>
</section>
