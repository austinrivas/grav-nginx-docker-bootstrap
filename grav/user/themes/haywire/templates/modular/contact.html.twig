contact:
    titleOne: 'Lakewood Ranch Commercial'
    titleTwo: 'Commercial Contacts'
    address: '<strong>LWR Commercial Realty</strong><br>14400 Covenant Way Lakewood Ranch, FL 34202'
    phone: 941.907.6677
    hours:
        -
            day: 'Mon. - Fri 9:00 am - 5:30 pm EST'
        -
