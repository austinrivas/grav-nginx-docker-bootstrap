<section class="contact is-fullheight">
    <div class="columns">
        <div class="container column is-8 is-bg-blue-light">
            <div class="form-container">
                {{ content }}
                <!-- <form method="" action="">
                    {% include formTemplate only %}
                </form> -->
                {% include "forms/form.html.twig" %}
            </div>
        </div>

        <aside class="column is-4 is-narrow-mobile is-fullheight section">
            <h2>{{ page.header.contact.titleOne }}</h2>
            <p>{{ page.header.contact.address }}</p>
            <p>Phone: <a href="tel:{{ page.header.contact.phone }}">{{ page.header.contact.phone }}</a></p>
            <p><strong>Hours:</strong><br>
                {% for hour in page.header.contact.hours %}
                    {{ hour.day }}<br>
                {% endfor %}
            </p>
            <h2>{{ page.header.contact.titleTwo }}</h2>
            {% for person in page.header.persons %}
                <p><strong>{{ person.name }}</strong><br>{{ person.title }}</p>
                <p><a href="mailto:{{ person.email }}">{{ person.email }}</a><br>
                <a href="tel:{{ person.phone }}">{{ person.phone }}</a></p>
            {% endfor %}
        </aside>
    </div>
</section>